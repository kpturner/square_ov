generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Position {
  automatic
  rear_of_south
  rear_of_north
  head_of_south
  head_of_north
  vip
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // One user can have many OVs
  ovs OV[]
}

model OV {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  ovDate    DateTime
  createdAt DateTime @default(now())

  // Foreign key linking OV → User
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // One OV can have many Officers
  officers Officer[]
}

model Officer {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  rank             String
  grandOfficer     Boolean
  grandOfficerYear Int?
  active           Boolean
  position         Position @default(automatic)

  // Foreign key linking Officer → OV
  ovId Int
  ov   OV  @relation(fields: [ovId], references: [id], onDelete: Cascade)
}
